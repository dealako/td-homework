                      "\n",
                      "Listen 8900\n",
                      "\n"
                    ]
                  ]
                },
                "mode" : "000644",
                "owner" : "root",
                "group" : "root"
              },
              "/etc/cfn/cfn-hup.conf" : {
                "content" : {
                  "Fn::Join" : [
                    "", [
                      "[main]\n",
                      "stack=", {"Ref" : "AWS::StackId"}, "\n",
                      "region=", {"Ref" : "AWS::Region"}, "\n"
                    ]
                  ]
                },
                "mode" : "000400",
                "owner" : "root",
                "group" : "root"
              }
            },
            "services" : {
              "sysvinit" : {
                "nginx" : {
