                    "", [
                      "server {\n",
                      "  listen 8900;\n",
                      "  charset utf-8;\n",
                      "  access_log                    /var/log/tdcustom/accesslogs/nginx.vhost.access.log;\n",
                      "  error_log                     /var/log/tdcustom/errorlogs/nginx.vhost.error.log;\n",
                      "  index                         index.html index.htm;\n",
                      "}\n"
                    ]
                  ]
